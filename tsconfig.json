{
  "compilerOptions": {
    /* âœ… Compatibilidad y rendimiento */
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,                      // ðŸš« modo estricto desactivado (mÃ¡s fluido en dev)
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,                  // âš¡ builds mÃ¡s rÃ¡pidos
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]                      // âœ… Soporte para imports absolutos (ej. "@/app/lib/...")
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"                // âœ… Requerido por Next.js
  ],
  "exclude": ["node_modules"]
}
